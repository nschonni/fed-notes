{% extends '../base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
<p>
  {% if date %}
    <time datetime="{{ date | isoDateFilter }}" class="dt-published">{{ date | displayDateFilter }}</time>
  {% endif %}
  <span>â€” {{ content | readingTime }} minute read</span>
</p>
{% endset %}

{% block content %}
    <article>
      {% include "partials/intro.njk" %}
      <div class="container">
        <div class="article-content__wrapper">
          <div class="sidebar-content">
              <div class="toc" aria-hidden="true">
                <h2 class="toc__header">On this page</h4>
                <div class="toc__content">{{ content | onlyToC | safe }}</div>
            </div>
          </div>
          <div class="article-content" >
            <div class="article-body">
              {{ content | noToC | safe }}
            </div>
            {% footnotes %}
            <div class="next-and-prev">
              <ul>
                <li class="next"><a href="#" class="button button--secondary"><span class="visually-hidden">Next: </span>Big IT for small minds</a></li>
                <li class="prev"><a href="#" class="button button--secondary"><span class="visually-hidden">Previous: </span>Programming in the land that time forgot</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </article>
    {% include "partials/subscribe.njk" %}

{% endblock %}

{% block scripts %}
  <script src="{{ '/js/script.js' | url }}" defer></script>
{% endblock %}
